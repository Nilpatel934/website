{% extends 'admin/admin_base.html.twig' %}

{% block title %}Add a User{% endblock %}

{% block body %}

<div class="team-container__title-box u-margin-bottom-medium">
    <h1 class="team-container__title heading-secondary">Add a User</h1>
    {% if referer is defined %}
        <a href="{{ referer }}" class="btn btn-default btn--blue">&larr; Go Back</a>
    {% endif %}
</div>

{{ form_start(form, { 'attr': {'class': 'admin-inputs'}}) }}

{{ form_errors(form) }}

{{ form_label(form.username, null, {'label_attr': {'class': 'admin-inputs__label'}}) }}
{{ form_widget(form.username, { 'attr': {'class': 'admin-inputs__text-input', 'placeholder': 'Enter a username'}}) }}

{{ form_label(form.email, null, {'label_attr': {'class': 'admin-inputs__label'}}) }}
{{ form_widget(form.email, { 'attr': {'class': 'admin-inputs__text-input', 'placeholder': 'Enter an Email'}}) }}

{{ form_label(form.password.first, null, {'label_attr': {'class': 'admin-inputs__label'}}) }}
{{ form_widget(form.password.first, { 'attr': {'class': 'admin-inputs__text-input', 'placeholder': 'Enter a Password'}}) }}

{{ form_label(form.password.second, null, {'label_attr': {'class': 'admin-inputs__label'}}) }}
{{ form_widget(form.password.second, { 'attr': {'class': 'admin-inputs__text-input', 'placeholder': 'Repeat the Password'}}) }}

{{ form_label(form.roles, null, {'label_attr': {'class': 'admin-inputs__label'}}) }}
{{ form_widget(form.roles, { 'attr': {'class': 'admin-inputs__select-input'}}) }}

<div class="admin-inputs__action-bar u-margin-top-medium">
    <div class="admin-inputs__action-item">
        {% if referer is defined %}
            <a href="{{ referer }}" class="btn btn-default btn--blue">Cancel</a>
        {% endif %}
    </div>
    <div class="admin-inputs__action-item">
        {{ form_widget(form.save, { 'attr': {'class': 'btn btn-default btn--green-solid'} }) }}
    </div>
</div>
{{ form_end(form) }}

{% endblock %}
